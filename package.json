{
  "name": "swifttranslator-tests",
  "version": "1.0.0",
  "description": "Playwright tests for Singlish to Sinhala translator",
  "scripts": {
    "test": "playwright test && playwright show-report",
    "test:positive": "playwright test tests/positive.spec.js",
    "test:negative": "playwright test tests/negative.spec.js",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "install-browsers": "npx playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0"
  }
}